<section class="index-section" data-name="{{ section.settings.text__SectionName }}" id="index-section--{{ section.id }}">
	{{ page.content }}
</section>

<style>
	section#index-section--{{ section.id }}
	{
		min-height: 100vh;
		width: 100vw;

		background-color: {{ section.settings.color__SectionBackground }};
	}
</style>

{% schema %}
{
	"presets": [
		{
			"category": "Building Blocks",
			"name": "Index Section"
		}
	],
	"settings": [
		{
			"type": "color",
			"id": "color__SectionBackground",
			"label": "Background Color",
			"default": "#FFD3FF"
		},
		{
			"type": "text",
			"id": "text__SectionName",
			"label": "Name",
			"default": "Section"
		}
	]
}
{% endschema %}