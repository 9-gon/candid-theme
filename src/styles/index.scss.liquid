/* Global screen rules. */
@media only screen
{
	div#index-sections
	{
		left: 0;
		max-width: 100vw;
		min-width: 100vw;
		position: absolute;
		top: 0;
	}

	div#navigation-menu
	{
		position: fixed;
		z-index: 900;
	}
}

/* Desktop rules. */
@media only screen and (min-width:768px)
{
	div#navigation-menu
	{
		left: 1.5vw;
		top: 1.5rem;
		width: 20vw;
	}

	img#navigation-menu__logo
	{
		height: auto;
		max-height: 50vh;
		max-width: 17vw;
		width: auto;
	}
}

